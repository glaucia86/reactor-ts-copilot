{
  "exclude": ["./coverage", "./dist", "__tests__", "jest.config.js"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "CommonJS",   
    "rootDir": "./src",                            
    "esModuleInterop": true, 
    "checkJs": true,     
    "outDir": "./dist",
    "moduleResolution": "node",                       
    "forceConsistentCasingInFileNames": true,  
    "noImplicitAny": true,          
    "strict": true,                                      
    "skipLibCheck": true                                 
  }                               
}